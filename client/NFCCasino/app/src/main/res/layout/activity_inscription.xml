<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtExpDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prénom :"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/editDateExp"
        android:layout_alignBottom="@+id/editDateExp"
        android:layout_alignStart="@+id/txtNumber" />

    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="50dp"
        android:text="Mail :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="16dp"
        android:text="Adresse :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editCodePostal"
        android:layout_alignBottom="@+id/editCodePostal"
        android:layout_alignStart="@+id/txtExpDate"
        android:text="Code postal :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom :"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/editCtrlNumber"
        android:layout_alignBottom="@+id/editCtrlNumber"
        android:layout_alignStart="@+id/txtExpDate" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="19dp"
        android:text="Région :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ville :"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/editVille"
        android:layout_alignBottom="@+id/editVille"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pays :"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/editPays"
        android:layout_alignBottom="@+id/editPays"
        android:layout_alignStart="@+id/textView10" />

    <EditText
        android:id="@+id/editVille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editCodePostal"
        android:layout_below="@+id/editCodePostal"
        android:ems="10"
        android:hint="Nice"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editPays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editRegion"
        android:layout_below="@+id/editRegion"
        android:ems="10"
        android:hint="France"
        android:inputType="textPersonName"
        android:textSize="18sp" />
    />

    <EditText
        android:id="@+id/editAdresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/btnAdd"
        android:ems="10"
        android:hint="12 avenue de la Californie"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editCtrlNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editAdresse"
        android:layout_alignStart="@+id/editAdresse"
        android:layout_below="@+id/editDateExp"
        android:ems="10"
        android:hint="DUPONT"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editDateExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editCtrlNumber"
        android:layout_alignStart="@+id/editCtrlNumber"
        android:layout_below="@+id/editNumber"
        android:ems="10"
        android:hint="Michel"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtNumber"
        android:layout_alignBottom="@+id/txtNumber"
        android:layout_alignLeft="@+id/editDateExp"
        android:layout_alignStart="@+id/editDateExp"
        android:ems="10"
        android:hint="user@nfc.com"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editCodePostal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editAdresse"
        android:layout_below="@+id/editAdresse"
        android:ems="10"
        android:hint="06200"
        android:inputType="textPostalAddress"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignLeft="@+id/editVille"
        android:layout_alignStart="@+id/editVille"
        android:ems="10"
        android:hint="Provence Alpes Côte d'Azur"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnRetour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnAdd"
        android:text="Retour"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp" />

</RelativeLayout>