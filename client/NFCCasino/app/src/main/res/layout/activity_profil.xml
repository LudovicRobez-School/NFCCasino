<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtFirstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Michel"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/player_croupier" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Se déconnecter" />

    <Button
        android:id="@+id/btnAddCredit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        android:layout_marginStart="37dp"
        android:layout_alignBaseline="@+id/txtBalance"
        android:layout_alignBottom="@+id/txtBalance"
        android:layout_toEndOf="@+id/txtNbCard" />

    <Button
        android:id="@+id/btnAddCard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        android:layout_alignBaseline="@+id/txtNbCard"
        android:layout_alignBottom="@+id/txtNbCard"
        android:layout_toEndOf="@+id/btnDelCard" />

    <TextView
        android:id="@+id/txtLastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DUPONT"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/txtFirstname"
        android:layout_alignStart="@+id/txtFirstname"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/txtBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/txtLastname"
        android:layout_marginBottom="30dp"
        android:text="0.0 €"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/logo_euro"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/credit_card"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <TextView
        android:id="@+id/txtNbCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/txtBalance"
        android:layout_marginBottom="31dp"
        android:text="0 carte(s)"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDelCard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"
        android:layout_alignBaseline="@+id/txtNbCard"
        android:layout_alignBottom="@+id/txtNbCard"
        android:layout_alignStart="@+id/btnAddCredit" />

    <ImageView
        android:id="@+id/imgAddPayment"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/nfccasino"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btnModifProfil"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/txtLastname"
        android:layout_alignStart="@+id/btnAddCredit"
        android:text=" ? " />

    <EditText
        android:id="@+id/editAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0.0"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imgAddPayment"
        android:layout_alignStart="@+id/txtNbCard"
        android:layout_marginTop="22dp"
        android:layout_toStartOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="€"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/editAmount"
        android:layout_alignBottom="@+id/editAmount"
        android:layout_alignEnd="@+id/txtNbCard" />

    <Button
        android:id="@+id/btnAddPayment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/editAmount"
        android:layout_alignStart="@+id/btnDelCard"
        android:text="+" />


</RelativeLayout>